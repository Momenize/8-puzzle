<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Puzzle.MainWindow"
        Title="8-Puzzle Game">
        <StackPanel>
                <!-- Game Board -->
                <UniformGrid Rows="3" Columns="3" Margin="10" x:Name="GameBoard">
                        <!-- Tiles will be added dynamically in code-behind -->
                </UniformGrid>

                <!-- Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Shuffle" Click="Shuffle_Click" Width="100" Margin="5" />
                        <Button Content="Reset" Click="Reset_Click" Width="100" Margin="5" />
                </StackPanel>
        </StackPanel>
</Window>
